<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<title>Profile</title>
	<link rel="stylesheet" type="text/css" href="style1.css">
</head>
<body>
	<div class="top">Blog</div>
	<div class='panel'>
		<a href="/">Home</a>
		<a href="/search">Search</a>
		<form action="/logout" method="POST">
  			<button type="submit">Log Out</button>
		</form>
	</div>
	<div class="article">
		<% var i=0; articles.forEach(function(article){ %>
		<div>
			<h4><%= article.title %></h4>
			<p><%=article.description%></p>
			<a href="/read/<%=article.id%>" class="readm">Read more</a>
			<a href="/edit/<%=article.id%>">Edit</a>
			<form action="/delete/<%=article.id%>" method="POST">
  				<button type="submit">Delete</button>
			</form>
		</div>
	    <% i++; })%>
	    <%if(i==0){%>
	    	<h3>You havent posted anything yet</h3>
	    	<%} %>
	</div>
</body>
</html>